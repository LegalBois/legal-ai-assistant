{
  "name": "ai-shop-salesman-chrome-plugin",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.13.1"
  },
  "scripts": {
    "clean": "rm -rf node_modules/.vite",
    "dev": "vite --config vite.config.embed.js --mode default",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --mode default",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@hotjar/browser": "1.0.9",
    "@langchain/core": "0.2.18",
    "@radix-ui/react-icons": "1.3.0",
    "@radix-ui/react-toast": "1.2.1",
    "@reduxjs/toolkit": "2.2.7",
    "@zxing/library": "0.21.3",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.1",
    "embla-carousel-react": "8.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-markdown": "9.0.1",
    "react-media-recorder": "1.7.1",
    "react-redux": "9.1.2",
    "react-zxing": "2.0.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "0.5.13",
    "@types/chrome": "0.0.268",
    "@types/node": "20.12.11",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.19",
    "cssnano": "7.0.1",
    "eslint": "8.57.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.6",
    "husky": "9.0.11",
    "lint-staged": "15.2.10",
    "postcss": "8.4.38",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.14",
    "tailwindcss": "3.4.3",
    "tailwindcss-animation-delay": "2.0.1",
    "typescript": "5.4.5",
    "vite": "5.4.6",
    "vite-plugin-static-copy": "1.0.4"
  }
}
